<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
          <%= form_for(@book) do |f| %>
          <div class="form-group">
            
            <%= f.label :Title %></br>
            <%= f.text_field :title %></br>
           
          </div>
          <div class="form-group">
            
            <%= f.label :Opinion %></br>
            <%= f.text_area :body %></br>
            
          </div>
          <div class="form-group">
            <button class="btn btn-success">Update book</button>
          </div>
            <div class="menu">
              <%= link_to "Show", book_path(@book) %>
              |
              <%= link_to "Back", books_path %>
            </div>
          <% end %>     
    </div>
  </div>
</div>