<div class="container">
  <%= render 'books/error', model: @book %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
	  	<h2>Books</h2>
	  	<table class="table table-sm user-index">
        <thead>
          <th></th>
          <th><label for="book_title">Title</label></th>
          <th><label for="book_title">Opinion</label></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user,:profile_image,:fill, 25, 25,fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
  	  </table>
  	</div>
  </div>
</div>