<div class="container">
  <div class="row">
    <div class= "col-6 offset-3">
      <h1>User info</h1>
      <%= render 'books/error', model: @user %>
      <%= form_with model:@user do |f| %>
        <div class = "form-group">
          <div class="user-name">Name</div>
          <%= f.text_field :name, class: "form-control"%>
        </div>
        <div class ="form-group">
          <div class="user-edit-image">Image</div>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class = "form-group">
          <div class="form-body">Introduction</div>
          <%= f.text_area :introduction, class: "form-control" %><br>
        </div>
          <%= f.submit 'Update User', class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>